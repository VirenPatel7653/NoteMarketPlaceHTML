@model NotesMarketPlace.Models.SignUpModel
@{
    ViewBag.Title = "SignUp";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="bg-image">
        <div class="container  h-100">
            <div class="row align-items-center h-100">
                <!--  Box for signup Content-->
                <div class="col-xs-12 col-sm-12 col-md-6 mx-auto">
                    <div class="h-100 justify-content-center d-flex" style="flex-direction: column;">

                        <div class="col-md-12 text-center my-3">
                            <img src="@Url.Content("~/Content/images/pre-login/top-logo.png")" class="img-responsive logo" alt="marketplace">
                        </div>
                        <div class="card mb-3">
                            <div class="card-body m-0">
                                <div class="container-fluid ">
                                    <div class="row">
                                        <div class="col-md-12 ">
                                            <h1 class="heading text-center">Create an Account</h1>
                                        </div>
                                        <div class="col-md-12">
                                            <p class="sub-heading text-center mt-0 mb-4">Enter your details to signup</p>
                                        </div>
                                        <div class="col-md-12">
                                            @if (ViewData["success"] != null)
                                            {
                                            <p class="text-success text-center mb-2">
                                                <i class="fa fa-check-circle"></i>@ViewData["success"]
                                                <br>
                                                Thank you for Signup.
                                            <br>
                                                Please verify the email address via clicking on the link we sent you via email.
                                            </p>}
                                            @if (ViewData["error"] != null)
                                            {
                                        <p class="text-danger text-center mb-2"><i class="fa fa-times-circle-o"></i> @ViewData["error"]</p>}

                                        </div>
                                    </div>
                                    @using (Html.BeginForm("SignUp", "Account", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    @Html.LabelFor(m => m.FirstName) <sup class="text-danger">&nbsp;*</sup>
                                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control focus", placeholder = "Enter your first name" })
                                                    @Html.ValidationMessageFor(m => m.FirstName)
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    @Html.LabelFor(m => m.LastName) <sup class="text-danger">&nbsp;*</sup>
                                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control focus", placeholder = "Enter your last name" })
                                                    @Html.ValidationMessageFor(m => m.LastName)
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    @Html.LabelFor(m => m.EmailID) <sup class="text-danger">&nbsp;*</sup>
                                                    @Html.TextBoxFor(m => m.EmailID, new { @class = "form-control focus", placeholder = "Enter your Email Address" })
                                                    @Html.ValidationMessageFor(m => m.EmailID)
                                                    @Html.ValidationMessage("EmailExist")
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group ">
                                                    @Html.LabelFor(m => m.Password) <sup class="text-danger">&nbsp;*</sup>
                                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control focus", placeholder = "Enter password",@id= "password-field" })
                                                    @Html.ValidationMessageFor(m => m.Password)
                                                 
                                                    <span toggle="#password-field" class="field-icon-change toggle-password"><img src="@Url.Content("~/Content/images/pre-login/eye.png")" class="img-responsive" alt="eye"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    @Html.LabelFor(m => m.ConfirmPassword) <sup class="text-danger">&nbsp;*</sup>
                                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control focus", placeholder = "Enter password" , @id= "password-field-confirm" })
                                                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                                                
                                                    <span toggle="#password-field-confirm" class="field-icon-change confirm-toggle-password"><img src="@Url.Content("~/Content/images/pre-login/eye.png")" class="img-responsive" alt="eye"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <button type="submit" class="btn btn-general btn-lg btn-block mt-0">SIGN UP</button>
                                            </div>
                                        </div>
                                    }
                                        <p class="text-center links">Already have an account?<a href='@Url.Action("Login","Account")'> Login</a></p>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--  Box for signup Content End-->
            </div>
        </div>
    </div>




    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/js")

</body>
</html>
