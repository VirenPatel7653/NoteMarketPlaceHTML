@model NotesMarketPlace.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Notes MarketPlace</title>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="bg-image">
        <div class="container h-100">
            <div class="row align-items-center h-100">
                <!-- Box for Login Content-->
                <div class="col-xs-12 col-sm-12 col-md-6 mx-auto">
                    <div class="h-100 justify-content-center d-flex" style="flex-direction: column;">

                        <div class="col-md-12 text-center my-3">
                            <a href='@Url.Action("Index","Home")'>
                                <img src="@Url.Content("~/Content/images/pre-login/top-logo.png")" class="img-responsive logo" alt="marketplace">
                            </a>
                        </div>
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="container-fluid ">
                                    <div class="row">
                                        <div class="col-md-12 ">
                                            <h1 class="heading text-center">Login</h1>
                                        </div>
                                        <div class="col-md-12">
                                            <p class="sub-heading text-center">Enter your email address and password to login.</p>


                                            @if (ViewBag.Message != null)
                                            {
                                                <h4 class="text-danger text-center mb-2"><i class="fa fa-times-circle-o"></i> @ViewBag.Message</h4>

                                            }
                                        </div>
                                    </div>
                                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()

                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    @Html.LabelFor(m => m.EmailID) <sup class="text-danger">&nbsp;*</sup>
                                                    @Html.TextBoxFor(m => m.EmailID, new { @class = "form-control focus", placeholder = "Enter your Email Address" })
                                                    @Html.ValidationMessageFor(m => m.EmailID)

                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    @Html.LabelFor(m => m.Password) <sup class="text-danger">&nbsp;*</sup>
                                                    <label for="exampleInputPassword1" class="forgot"><a href="@Url.Action("ForgotPassword","Account")">Forgot Password?</a></label>
                                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control focus", placeholder = "Enter password", @id = "password-field" })
                                                    @Html.ValidationMessageFor(m => m.Password)

                                                    <span toggle="#password-field" class="field-icon toggle-password"><img src="@Url.Content("~/Content/images/pre-login/eye.png")" class="img-responsive" alt="eye"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-12">

                                                <div class="form-group form-check">
                                                    <input type="checkbox" class="form-check-input" name="RememberMe" id="exampleCheck1">
                                                    <label class="form-check-label ml-4 mb-0 mt-3" for="exampleCheck1">Remember Me</label>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <button type="submit" class="btn btn-general btn-lg btn-block">LOGIN</button>
                                            </div>
                                        </div>
                                    }
                                    <p class="text-center links">Don't have an account?<a href="@Url.Action("SignUp","Account")"> Sign Up</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Box for Login Content End-->
            </div>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/js")

    @if (@TempData["Success"] != null)
    {

        <script type="text/javascript">
        $(function () {
                 swal({
                    text: "@TempData["Success"]",
                     icon: "success",
                     buttons: {
                         confirm: { text: 'Ok', className: 'sweet-primary' },

                     },
                });
        });
        </script>

    }
    @if (@TempData["Error"] != null)
    {

        <script type="text/javascript">
        $(function () {
                 swal({
                    text: "@TempData["Error"]",
                    icon: "error",
                });
        });
        </script>

    }



</body>
</html>
