@model NotesMarketPlace.Models.ChangePasswordModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Password</title>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
   
    <div class="bg-image">

        <div class="container  h-100">
            <div class="row align-items-center h-100">

                <!-- Box for change password-->
                <div class="col-xs-12 col-sm-12 col-md-6 mx-auto">
                    <div class="h-100 justify-content-center d-flex" style="flex-direction: column;">

                        <div class="col-md-12 text-center my-3">
                            <img src="@Url.Content("~/Content/images/pre-login/top-logo.png")" class="img-responsive logo" alt="marketplace">
                        </div>
                        <div class="card mb-3">
                            <div class="card-body m-0">

                                <div class="container-fluid ">
                                    <div class="row">
                                        <div class="col-md-12 ">
                                            <h1 class="heading text-center">Change Password</h1>
                                        </div>
                                        <div class="col-md-12">
                                            <p class="sub-heading text-center">Enter your new password to change your password</p>

                                            @if (ViewBag.Message != null)
                                            {
                                                <h4 class="text-danger text-center mb-2"><i class="fa fa-times-circle-o"></i> @ViewBag.Message</h4>

                                            }
                                        </div>
                                    </div>
                                    @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group ">
                                            @Html.LabelFor(m => m.OldPassword) <sup class="text-danger">&nbsp;*</sup>
                                            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control focus", placeholder = "Enter password", @id = "password-field" })
                                            @Html.ValidationMessageFor(m => m.OldPassword)

                                            <span toggle="#password-field" class="field-icon-change toggle-password"><img src="@Url.Content("~/Content/images/pre-login/eye.png")" class="img-responsive" alt="eye"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.NewPassword) <sup class="text-danger">&nbsp;*</sup>
                                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control focus", placeholder = "Enter password", @id = "new-password-field" })
                                            @Html.ValidationMessageFor(m => m.NewPassword)

                                            <span toggle="#new-password-field" class="field-icon-change confirm-toggle-password"><img src="@Url.Content("~/Content/images/pre-login/eye.png")" class="img-responsive" alt="eye"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.NewConfirmPassword) <sup class="text-danger">&nbsp;*</sup>
                                            @Html.PasswordFor(m => m.NewConfirmPassword, new { @class = "form-control focus", placeholder = "Enter password", @id = "password-field-confirm" })
                                            @Html.ValidationMessageFor(m => m.NewConfirmPassword)

                                            <span toggle="#password-field-confirm" class="field-icon-change confirm-toggle-password"><img src="@Url.Content("~/Content/images/pre-login/eye.png")" class="img-responsive" alt="eye"></span>
                                        </div>
                                    </div>
                                

                                    <div class="col-md-12">
                                        <button type="submit" class="btn btn-general btn-lg btn-block mt-0 mb-4">SUBMIT</button>
                                    </div>
                                </div>
                                    }
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Box for change password End-->
            </div>
        </div>
    </div>






    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/js")

</body>
</html>

