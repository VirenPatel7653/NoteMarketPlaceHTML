@model NotesMarketPlace.Context.ContactU
@{
    ViewBag.Title = "ContactUs - Notes MarketPlace";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main role="main" class="pt-5">
    <!-- Top Section-->
    <div class="jumbotron jumbotron-fluid user-profile-banner d-flex justify-content-center align-items-center" style="height: 250px;">
        <div class="container text-center">
            <h1>Contact Us</h1>
        </div>
    </div>
    <!-- Top Section End-->
    <!-- Contact Form-->
    <div class="container form-placeholder" style="margin-bottom: 60px;">
        <!-- Contact Form Heading-->
        <div class="row">
            <div class="col-md-12">
                <h1 class="heading field-heading mb-2">Get in Touch</h1>

            </div>
            <div class="col-md-12">
                <p class="sub-heading ">Let us know how to get back to you.</p>
            </div>
        </div>
        <!-- Contact Form Heading End-->

        @using (Html.BeginForm("ContactUs", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="row" style="min-height: 210px;">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(m => m.FullName) <sup class="text-danger">&nbsp;*</sup>
                                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control focus", placeholder = "Enter your full name" })
                                @Html.ValidationMessageFor(m => m.FullName)
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email) <sup class="text-danger">&nbsp;*</sup>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control focus", placeholder = "Enter your email address", @readonly = "true" })

                                }
                                else
                                {
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control focus", placeholder = "Enter your email address" })

                                }
                                @Html.ValidationMessageFor(m => m.Email)
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Subject) <sup class="text-danger">&nbsp;*</sup>
                                @Html.TextBoxFor(m => m.Subject, new { @class = "form-control focus", placeholder = "Enter your subject" })
                                @Html.ValidationMessageFor(m => m.Subject)
                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Comments) <sup class="text-danger">&nbsp;*</sup>
                        @Html.TextAreaFor(m => m.Comments, new { @class = "form-control focus", placeholder = "Comments...", style = "height: 242px;" })
                        @Html.ValidationMessageFor(m => m.Comments)
                        
                    </div>
                </div>
            </div>
            <div class="row no-gutters">
                <div class="col-md-6">
                    <button type="submit" class="btn btn-general px-5   float-left" style="margin-top: 30px;">SUBMIT</button>
                </div>
            </div>


        }


    </div>
    <!-- Contact Form End-->
</main>




@if (@ViewBag.Success != null)
{

    @section Scripts{
        <script type="text/javascript">

            $(function () {
                
                 swal({
                    text: "@ViewBag.Success",
                    icon: "success",
                });
        });
        </script>
    }
}



