<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>

    <!-- Top Section-->
    <div class="jumbotron jumbotron-fluid home-banner" style="height:620px;">

        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg  fixed-top  navbar-light home-nav-top mb-5">
            <div class="container">
                <span class="navbar-brand">
                    
                    <a href='@(Request.IsAuthenticated?@Url.Action("SellYourNotes","Notes"):@Url.Action("Index","Home"))'>
                        <img src="@Url.Content("~/Content/images/pre-login/top-logo.png")" class="img-responsive nav-logo" alt="notesmarketplace">
                    </a>
                </span>
                <button class="navbar-toggler" id="openmenu" type="button">
                    <i class="fa fa-bars"></i>
                </button>


                <!-- Mobile Menu -->
                <div id="mobile-nav">
                    <a href='@(Request.IsAuthenticated?@Url.Action("SellYourNotes","Notes"):@Url.Action("Index","Home"))'>
                        <img src="@Url.Content("~/Content/images/Dashboard/logo.png")" class="img-responsive nav-logo mt-3" alt="notesmarketplace">
                    </a>

                    <!-- Mobile Menu Close Button -->
                    <span id="mobile-nav-close-btn">&times;</span>

                    <div id="mobile-nav-content">
                        <ul class="navbar-nav ml-auto">

                            <li class="nav-item">

                                <a class="nav-link  mt-3" href='@Url.Action("SearchNotes","Notes")'> <b class="home-nav @(ViewContext.RouteData.Values["Action"].ToString()=="SearchNotes"?"nav-active":"")"> Search Notes</b></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link mt-3" href='@Url.Action("SellYourNotes","Notes")'><b class="home-nav @(ViewContext.RouteData.Values["Action"].ToString()=="SellYourNotes"?"nav-active":"")">Sell Your Notes</b></a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link mt-3" href='@Url.Action("FAQ","Home")'><b class="home-nav @(ViewContext.RouteData.Values["Action"].ToString()=="FAQ"?"nav-active":"")">FAQ</b></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link mt-3" href='@Url.Action("ContactUs","Home")'><b class="home-nav @(ViewContext.RouteData.Values["Action"].ToString()=="ContactUs"?"nav-active":"")">Contact Us</b></a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href='@Url.Action("Login","Account")'>
                                    <button type="button" class="btn btn-home btn-sm mt-3 px-4">Login</button>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>


                <div class="collapse navbar-collapse" id="navbarSupportedContent">

                    <ul class="navbar-nav ml-auto">

                        <li class="nav-item">

                            <a class="nav-link  mt-2" href='@Url.Action("SearchNotes","Notes")'> <b class="home-nav @(ViewContext.RouteData.Values["Action"].ToString()=="SearchNotes"?"nav-active":"")"> Search Notes</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link red mt-2" href='@Url.Action("SellYourNotes","Notes")'><b class="home-nav @(ViewContext.RouteData.Values["Action"].ToString()=="SellYourNotes"?"nav-active":"")">Sell Your Notes</b></a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link mt-2" href='@Url.Action("FAQ","Home")'><b class="home-nav @(ViewContext.RouteData.Values["Action"].ToString()=="FAQ"?"nav-active":"")">FAQ</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mt-2" href='@Url.Action("ContactUs","Home")'><b class="home-nav @(ViewContext.RouteData.Values["Action"].ToString()=="ContactUs"?"nav-active":"")">Contact Us</b></a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href='@Url.Action("Login","Account")'>
                                <button type="button" class="btn btn-home btn-sm mt-0 px-4">Login</button>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Navigation End-->
        <!-- Top section with background image-->
        <div class="container h-100">
            <div class="row align-items-center h-100">
                <div class="col-md-12">

                    <div class="h-100 justify-content-center d-flex" style="flex-direction: column;">

                        <div class="col-lg-6 col-md-12 col-sm-12">
                            <h1 class="home-banner-heading">Download Free/Paid Notes <br /> or Sale your Book</h1>

                            <p class="home-banner-text">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptate blanditiis amet, reiciendis quidem possimus natus illo. Tenetur </p>
                            <a href='@Url.Action("FAQ","Home")'>
                                <button type="button" class="btn btn-outline-light home-banner-button px-3 py-2">LEARN MORE</button>
                            </a>
                        </div>

                    </div>
                </div>

            </div>
        </div>
        <!-- Top section with background image End-->
    </div>
    <!-- Top Section End-->

    @RenderBody()
    <!-- Footer-->
    <footer class="footer">
        <hr>
        <div class="container">

            <p class="footer-text">Copyright &copy; TatvaSoft All right reserved.</p>
            <ul class="social-list ">
                <li><a id="facebook" href="#"><i class="fa fa-facebook"></i></a></li>
                <li><a id="twitter" href="#"><i class="fa fa-twitter"></i></a></li>
                <li><a id="linkedin" href="#"><i class="fa fa-linkedin"></i></a></li>
            </ul>
        </div>
    </footer>
    <!-- Footer End-->



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/js")
    @Scripts.Render("~/bundles/headerjs")
    @RenderSection("scripts", required: false)
<script>
    $(function () {
       
        $.ajax({
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            url: '@Url.Action("Footer", "Home")',
            type: "Post"
        })
            .done(function (d) {
                $("#linkedin").attr("href", d.LNICON);    
                $("#facebook").attr("href", d.FBICON);    
                $("#twitter").attr("href", d.TWITTERICON);    
            });
    });
</script>


</body>
</html>
